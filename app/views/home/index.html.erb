<span class="button big">
  <% if current_user %>
    <% if current_user.verified? %>
      <a href="/places">see spots</a>
    <% else %>
      <h2> Before you get started we need some extra information from you </h2>
      <%= form_tag("/users/verify", method: "post") do %>
        <div class="field">
          <%= label_tag :phone_number %>
          <%= telephone_field :user, :phone_number %>
        </div>

        <div class="field">
          <%= label_tag :verification_code %>
          <%= text_field :user, :verification_code %>
        </div>
        
        <div class="actions">
          <%= submit_tag "Enter" %>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to "Sign in with Facebook to start using goodspot", user_omniauth_authorize_path(:facebook) %>
  <% end %>
</span>
